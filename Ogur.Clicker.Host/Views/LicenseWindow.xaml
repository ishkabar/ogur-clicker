<Window x:Class="Ogur.Clicker.Host.Views.LicenseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="License Expired" Height="400" Width="520"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent">
    
    <Border CornerRadius="12" Background="#1E1E1E" BorderBrush="#DC3545" BorderThickness="2">
        <Grid Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Icon with circle -->
            <Grid Grid.Row="0" 
                  HorizontalAlignment="Center" 
                  Margin="0,0,0,30">
                <Ellipse Width="110" Height="110" 
                         Fill="#DC3545"/>
                <TextBlock Text="⚠️" 
                           FontSize="64" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           Margin="0,0,0,6"/>
            </Grid>

            <!-- Message -->
            <StackPanel Grid.Row="1" 
                        VerticalAlignment="Center"
                        Margin="0,0,0,20">
                <TextBlock Text="License Expired" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,16"
                           Foreground="White"/>
                <TextBlock Text="{Binding ExpirationMessage}" 
                           FontSize="15" 
                           HorizontalAlignment="Center" 
                           TextWrapping="Wrap"
                           TextAlignment="Center" 
                           Foreground="#999999"
                           LineHeight="22"/>
            </StackPanel>

            <!-- Close Button -->
            <Button Grid.Row="2" 
                    Content="Close Application" 
                    Click="CloseButton_Click"
                    Padding="40,14" 
                    HorizontalAlignment="Center"
                    FontSize="15" 
                    FontWeight="SemiBold"
                    Background="#DC3545" 
                    Foreground="White"
                    BorderThickness="0" 
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border"
                                            Background="{TemplateBinding Background}" 
                                            CornerRadius="8" 
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#B02A37"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Border>
</Window>