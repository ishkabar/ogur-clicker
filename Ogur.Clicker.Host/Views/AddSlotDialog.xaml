<!-- Ogur.Clicker.Host/Views/AddSlotDialog.xaml -->
<Window x:Class="Ogur.Clicker.Host.Views.AddSlotDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Custom Slot"
        Height="250" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1E1E1E"
        KeyDown="OnKeyDown">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White" />
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="#007ACC" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Padding" Value="16,8" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#005A9E" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#3F3F46" />
                                <Setter Property="Foreground" Value="#888888" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CancelButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#3F3F46" />
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Add Custom Hotbar Slot"
                   FontSize="18"
                   FontWeight="Bold"
                   HorizontalAlignment="Center" />

        <Border Grid.Row="2"
                Background="#2D2D30"
                BorderBrush="#3F3F46"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20">
            <StackPanel>
                <TextBlock Text="Press any key to add as slot:"
                           FontSize="14"
                           Margin="0,0,0,12"
                           HorizontalAlignment="Center" />

                <Border x:Name="KeyInput"
                        Background="#252526"
                        BorderBrush="#007ACC"
                        BorderThickness="2"
                        CornerRadius="4"
                        Height="60"
                        Focusable="True"
                        KeyDown="OnKeyDown">
                    <StackPanel VerticalAlignment="Center"
                                HorizontalAlignment="Center">
                        <TextBlock x:Name="KeyPreview"
                                   Text="..."
                                   FontSize="20"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Foreground="#007ACC" />
                        <TextBlock x:Name="VirtualKeyPreview"
                                   Text=""
                                   FontSize="11"
                                   HorizontalAlignment="Center"
                                   Foreground="#999999"
                                   Margin="0,4,0,0" />
                    </StackPanel>
                </Border>

                <TextBlock Text="Examples: ~, Z, X, NumPad1, etc."
                           FontSize="11"
                           Foreground="#999999"
                           HorizontalAlignment="Center"
                           Margin="0,8,0,0" />
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="6"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button x:Name="CancelButton"
                    Content="Cancel"
                    Width="100"
                    Style="{StaticResource CancelButton}"
                    Click="CancelButton_Click"
                    Margin="0,0,12,0" />
            <Button x:Name="AddButton"
                    Content="Add Slot"
                    Width="100"
                    IsEnabled="False"
                    Click="AddButton_Click" />
        </StackPanel>
    </Grid>
</Window>